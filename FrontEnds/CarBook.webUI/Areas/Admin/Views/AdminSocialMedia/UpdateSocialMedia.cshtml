@model UpdateSocialMediaDto
@{
    ViewData["Title"] = "UpdateSocialMedia";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<div class="page-content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-xl-12">
                <div class="card">
                    <div class="card-body">
                        <h4 class="card-title">Sosyal Medya Veri Düzenleme Alanı</h4>
                        <p class="card-subtitle mb-4">
                            Sosyal medya hesaplarınıza ait veri düzenlemelerini buradan yapabilirsiniz. İkonlarla ilgili listeye ikon listesi üzerinden ulaşabilirsiniz.
                            <form method="post">
                                 <input type="hidden" asp-for="SocialMediaID" />
                                <div class="form-group">
                                    <label for="exampleInputName">Sosyal Medya İsmi</label>
                                    <input type="text" class="form-control" id="exampleInputName" asp-for="Name" placeholder="Sosyal Medyanın Adını Giriniz">
                                </div>
                                <div class="form-group">
                                    <label for="exampleInputUrl">Sosyal Medya Linki</label>
                                    <input type="text" class="form-control" id="exampleInputUrl" asp-for="Url" placeholder="Sosyal Medyanın Linkini Giriniz">
                                </div>
                                <div class="form-group">
                                    <label for="exampleInputIcon">Sosyal Medya İkon Resmi</label>
                                    <input type="text" class="form-control" id="exampleInputIcon" asp-for="Icon" placeholder="Sosyal Medyanın İkon Resim URLsini Giriniz">
                                </div>
                                <button type="submit" class="btn btn-success waves-effect waves-light">Sosyal Medya Bilgisini Güncelle</button>
                            </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>






