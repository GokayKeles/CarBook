@model List<ResultAboutDto>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<div class="page-content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-xl-12">
                <div class="card">
                    <div class="card-body">
                        <h4 class="card-title">Ana Sayfa Hakkımızda Alanı</h4>
                        <p class="card-subtitle mb-4">
                            Ana sayfanın ve Hakkımızda sayfasının "hakkımda" alanında bulunan bilgileri aşağıdan düzenleyebilirsiniz.Tema bütünlüğünün bozulmaması adına lütfen sadece bir tane veri girişi yapınız. Aksi durumlarda tema bütünlüğü bozulacaktır.
                        </p>
                        <div class="table-responsive">
                            @if (Model.Count == 0)
                            {
                                <div class="alert alert-danger" role="alert">
                                    Herhangi bir kayıt bulunamadı
                                </div>
                            }
                            else
                            {
                                <table class="table mb-0">
                                    <thead>
                                        <tr>
                                            <th>Başlık</th>
                                            <th>Açıklama</th>
                                            <th>Görsel</th>
                                            <th>Sil</th>
                                            <th>Güncelle</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @foreach (var item in Model)
                                        {
                                            <tr>
                                                <td>@item.Title</td>
                                                <td>@item.Description</td>
                                                <td>@item.ImageUrl</td>
                                                <td><a href="/Admin/AdminAbout/RemoveAbout/@item.AboutID" class="btn btn-outline-danger">Sil</a></td>
                                                <td><a href="/Admin/AdminAbout/UpdateAbout/@item.AboutID" class="btn btn-outline-success">Güncelle</a></td>
                                            </tr>
                                        }
                                    </tbody>
                                </table>
                            }
                            <br />
                            <a href="/Admin/AdminAbout/CreateAbout/" class="btn btn-outline-primary">Yeni Hakkımızda Alanı Girişi</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>






