@model CreateReservationDto
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/UILayout/Index.cshtml";
}

<div class="col-md-12 block-9 mb-md-5">
    <form  class="bg-light p-5 contact-form" method="post">
        <h3 class="alert alert-success">Araç Rezervasyon Formu</h3>
        <br/>
            <label>Almak İstediğiniz Araba</label>
            <input type="hidden" asp-for="CarID" value="@ViewBag.v3" class="form-control" readonly placeholder="">
        <div class="form-group">
            <label>Adınız</label>
            <input type="text" asp-for="Name" class="form-control">
        </div>
        <div class="form-group">
            <label>Soyadınız</label>
            <input type="text" asp-for="Surname" class="form-control" placeholder="">
        </div>
        <div class="form-group">
            <label>Mail Adresiniz</label>
            <input type="text" asp-for="Email" class="form-control" placeholder="">
        </div>
        <div class="form-group">
            <label>Telefon Numaranız</label>
            <input type="text" asp-for="Phone" class="form-control" placeholder="">
        </div>
        <div class="form-group">
            <label>Alınmak İstenen Lokasyon</label>
            @Html.DropDownListFor(x => x.PickUpLocationID, (List<SelectListItem>)ViewBag.v, new { @class = "form-control", @id = "drop" })
        </div>
        <div class="form-group">
            <label>İade Edilmek İstenen Lokasyon</label>
            @Html.DropDownListFor(x => x.DropOffLocationID, (List<SelectListItem>)ViewBag.v, new { @class = "form-control", @id = "drop" })
        </div>
        <div class="form-group">
            <label>Yaşınız</label>
            <input type="text" asp-for="Age" class="form-control" placeholder="">
        </div>
        <div class="form-group">
            <label for="file-upload" class="form-label">Ehliyetinizi yükleyin</label>
            <input type="file" asp-for="DriverLicense" class="form-control" id="file-upload" name="DriverLicense" accept="image/*" multiple>
        </div>
        <div class="form-group">
            <textarea asp-for="Description" id="" cols="30" rows="7" class="form-control" placeholder="Varsa Eklemek İstedikleriniz"></textarea>
        </div>
        <div class="form-group">
            <input type="submit" value="Rezervasyonu Tamamla" class="btn btn-primary py-3 px-5">
        </div>
    </form>

</div>

